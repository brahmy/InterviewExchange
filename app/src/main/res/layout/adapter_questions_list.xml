<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/bgm_card"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textview_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hello_first_fragment"
                app:autoSizeTextType="uniform"
                app:autoSizeMaxTextSize="17sp"
                app:autoSizeMinTextSize="14sp"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="5.0dp"
                android:fontFamily="@font/poyntertext_bold"
                android:textColor="@color/milk" />

            <TextView
                android:id="@+id/textview_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/merriweather_bold"
                android:justificationMode="inter_word"
                android:lineHeight="20dp"
                android:lineSpacingExtra="5.0dp"
                android:maxLines="2"
                android:text="@string/hello_first_fragment"
                android:textColor="@color/milk"
                app:autoSizeTextType="uniform"
                app:autoSizeMaxTextSize="15sp"
                app:autoSizeMinTextSize="12sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/more"
                app:autoSizeTextType="uniform"
                app:autoSizeMaxTextSize="13sp"
                app:autoSizeMinTextSize="12sp"
                android:fontFamily="@font/merriweather_italic"
                android:layout_gravity="end"
                android:textColor="@color/milk"
                android:id="@+id/textview_more"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>